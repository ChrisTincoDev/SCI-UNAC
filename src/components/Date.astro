---
const { path } = Astro.props;

const getTitle = (path:string) => {
    switch (path) {
        case "/home":
            return "Vista General";
        case "/inventory":
            return "Inventario Total";
        case "/purchases":
            return "Compras Totales";
        case "/sales":
            return "Ventas Totales";
        case "/reports":
            return "Reportes";
        default:
            return "Vista General";
    }
};

const fecha = new globalThis.Date();
const fechaFormateada = fecha.toLocaleDateString("es-ES", {
    day: "numeric",
    month: "long",
    year: "numeric",
});
---

<div class="flex flex-col items-start justify-start">
    <h1 class="text-lg font-semibold uppercase">{getTitle(path)}</h1>
    <p class="text-xs text-gray-600">{fechaFormateada}</p>
</div>